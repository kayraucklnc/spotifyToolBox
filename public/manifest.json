{
  "manifest_version": 3,
  "name": "Spotify Extension",
  "version": "1.0.1",
  "icons": {
    "48": "images/spotify.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "permissions": [
    "tabs"
  ],
  "background": {
    "service_worker": "/scripts/background.js"
  },
  "content_scripts": [
    {
      "js": [
        "/src/spotify.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}